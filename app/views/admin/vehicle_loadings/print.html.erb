<style>
  .table-width {
    width: 100%
  }

  @page {
    size: A5;
    margin: 0;
  }

  @media print {
    .second {
      display: none;
    }
    h3 {
      text-align: center;
    }
    .table-bordered {
      width: 80%
    }
    table, th, td
    {
      border-collapse:collapse;
      border: 1px solid black;
    }
    .panel-border {
      border-radius: 1px;
      border: 1px solid beige;
      margin-bottom: 25px;
    }
  }
  .bg-contact {
    background-color: #FFF;
    padding-top: 32px;
    padding-bottom: 32px;
    border-radius: 1px;
    border-bottom: 1px solid beige;
    border-bottom-style: dashed
  }
</style>
<%= stylesheet_link_tag "application" %>
<div class="bg-contact">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 text-center">
        <h3>Space for letterhead image</h3>
      </div>
    </div>
  </div>
</div>
<div style="width: 15%; margin-top: 25px;">
  <div class="panel panel-default panel-border">
      <div class="panel-body">
          <h4 style="text-align: center">Dist logo</h4>
      </div>
  </div>
</div>
<!-- Column with discoint -->
<div class="content">
  <div class="container">
    <div class="header">
    </div>
    <div class="row">
      <div class="second">
        <div class="col-xs-7">
        </div>
      </div>
      <div class="first">
        <div class="col-xs-5 text-right">
          <h5 style="text-align: right"> Date: <%= @vehicle_loading.created_at.strftime("%d/%m/%Y") %> </h5>
        </div>
      </div>
    </div>

    <div class="update_form">
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default" style="">
            <% @vehicle_loading.vehicle_loading_items.each_with_index do |item, i| %>
              <div>
                <h4>Vehicle: <%= item.vehicle.name %> Warehouse: <%= item.warehouse.name %> Device Id: <%= item.device.device_id %></h4>
              </div>
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th width="10%" style="text-align: center;" class="th">S/N</th>
                    <th width="25%" style="text-align: center;" class="th">Item name</th>
                    <th width="25%" style="text-align: center;" class="th">Qty</th>
                    <th width="25%" style="text-align: center;" class="th">S. Qty</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td class="center" class="td" style="text-align: center;"><%= (i + 1) %></td>
                    <td class="center" class="td"><%= item.item_name %></td>
                    <td class="center" class="td"><%= item.qty %></td>
                    <td class="center" class="td"><%= item.s_qty %></td>
                  </tr>
                </tbody>
              </table>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <footer class="footer" style="text-align: center; margin-top: 50px;">
      <div class="container">
        <hr style="width: 30%;">
        <p class="text-muted">Signature</p>
      </div>
    </footer>
  </div>
</div>
