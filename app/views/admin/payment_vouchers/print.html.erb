<style>
  .table-width {
    width: 100%
  }

  @page {
    size: A5;
    margin: 0;
  }

  @media print {
    .second {
      display: none;
    }
    h3 {
      text-align: center;
    }
    .table-width {
      width: 85%
    }
    .table-bordered, .th, .td
    {
      border-collapse:collapse;
      width:75%;
      border: 1px solid black;
      text-align:right;
    }
    .panel-border {
      border-radius: 1px;
      border: 1px solid beige;
      margin-bottom: 25px;
    }
  }
  .bg-contact {
    background-color: #FFF;
    padding-top: 32px;
    padding-bottom: 32px;
    border-radius: 1px;
    border-bottom: 1px solid beige;
    border-bottom-style: dashed
  }
</style>
<%= stylesheet_link_tag "application" %>
<div class="bg-contact">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 text-center">
        <h3>Space for letterhead image</h3>
      </div>
    </div>
  </div>
</div>
<div style="width: 15%; margin-top: 25px;">
  <div class="panel panel-default panel-border">
      <div class="panel-body">
          <h4 style="text-align: center">Dist logo</h4>
      </div>
  </div>
</div>
<div class="content">
  <div class="container">
    <div class="header">
    </div>
    <div class="row">
      <div class="first">
        <div class="col-xs-7">
          <div class="panel panel-default">
            <div class="panel-heading">
              <table class="table-width">
                <thead>
                  <tr>
                    <th width="50%" style="text-align: left;">
                      <h4>Voucher No. <%= @payment_voucher.voucher_no %> </h4>
                    </th>
                    <th width="50%" style="text-align: right;">
                      <% if @payment_voucher.date.present? %>
                        <h4> Date <%= @payment_voucher.date.strftime("%d/%m/%Y") %> </h4>
                      <% else %>
                        <h4> Date <%= @payment_voucher.created_at.strftime("%d/%m/%Y") %> </h4>
                      <% end %>
                    </th>
                  </tr>
                </thead>
              </table>
            </div>
            <div class="panel-body">
              <p>
                Payment to: <%= @payment_voucher.ledger.name %><br>
                Ledger Name: <%= @payment_voucher.expense.name %><br>
                Details: <%= @payment_voucher.details %><br>
                Payment by: <%= @payment_voucher.employee.full_name %><br>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="second">
        <div class="col-xs-5 text-right">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4>Payment Method</h4>
            </div>
            <div class="panel-body">
              <% if @payment_voucher.cheque_no.present? && @payment_voucher.bank_name.present? %>
                <p>
                  Cheque No.: <%= @payment_voucher.cheque_no %> <br>
                  Bank Name: <%= @payment_voucher.bank_name %> <br>
                </p>
              <% else %>
                Cash: <%= @payment_voucher.cash %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="update_form">
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default" style="">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th width="50%" style="text-align: left;" class="th">Amount</th>
                  <th width="50%" style="text-align: right;" class="th"><%= @payment_voucher.amount %></th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>

    <footer class="footer" style="text-align: center; margin-top: 50px;">
      <div class="container">
        <hr style="width: 30%;">
        <p class="text-muted">Signature</p>
      </div>
    </footer>
  </div>
</div>
